{
    "compilerOptions": {
      "target": "es5",
      "module": "ES2015",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "jsx": "preserve", // or "react-jsx" for React 17+
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["shared"],
    "exclude": ["node_modules", "dist"]
  }
  